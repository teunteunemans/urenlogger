# Discord Bot Configuration
# Get these from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here
CLIENT_ID=your_application_id_here
GUILD_ID=your_server_guild_id_here
LOG_CHANNEL_ID=your_log_channel_id_here

# Debug/Admin Configuration
DEBUG_KEY=your_debug_key_here

# Firebase Configuration
# The service-account.json file should be in the same directory as this .env file
GOOGLE_APPLICATION_CREDENTIALS=./service-account.json

# Email Configuration (SMTP - Gmail)
# For Gmail, use smtp.gmail.com:587
# Generate an App Password: https://support.google.com/accounts/answer/185833
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
YOUR_EMAIL_ADDRESS=your_email@gmail.com
BOSS_EMAIL=boss_email@company.com